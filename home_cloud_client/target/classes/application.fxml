<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="center" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.home.des.client.Controller" stylesheets="application.css">
        <VBox HBox.hgrow="ALWAYS">
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="Exit" onAction="#menuItemFileExit"/>
                </Menu>
            </MenuBar>

            <TextField fx:id="pathField" editable="false" focusTraversable="false"/>
            <ListView VBox.vgrow="ALWAYS" fx:id="filesListComputer" onMouseClicked="#filesListComputerClicked">
            </ListView>
            <HBox spacing="5.0">
                <Button maxWidth="Infinity" text="Copy" HBox.hgrow="ALWAYS"/>
                <Button maxWidth="Infinity" text="Move" HBox.hgrow="ALWAYS"/>
                <Button maxWidth="Infinity" text="Delete" HBox.hgrow="ALWAYS"/>
                <Button id="bUpload" maxWidth="Infinity" text="Upload" HBox.hgrow="ALWAYS" onAction="#buttonUpload" visible="false"/>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </HBox>
        </VBox>
        <VBox HBox.hgrow="ALWAYS">
            <ListView VBox.vgrow="ALWAYS" fx:id="filesListServer" onMouseClicked="#filesListComputerClicked">
            </ListView>
            <Button id="bDownload" maxWidth="Infinity" text="Download" HBox.hgrow="ALWAYS" onAction="#buttonDownload"/>
            <Button maxWidth="Infinity" text="UpdateServerFiles" HBox.hgrow="ALWAYS" onAction="#buttonUpdateFileList"/>
            <Button maxWidth="Infinity" text="Connect" HBox.hgrow="ALWAYS" onAction="#connect_server"/>
        </VBox>
</HBox>
